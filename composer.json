{
    "name": "ad7six/shadow-translate",
    "description": "Manage translated content with shadow tables",
    "type":"cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Dawson",
            "email": "andydawson76@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "cakephp/orm": "~3.0",
        "cakephp/i18n": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "<6.0",
        "cakephp/cakephp": "~3.1",
        "cakephp/cakephp-codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "ShadowTranslate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShadowTranslate\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
            "TestApp\\": "./vendor/cakephp/cakephp/tests/test_app/TestApp"
        }
    }
}
